{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "allowJs": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "exclude": ["build"]
}
